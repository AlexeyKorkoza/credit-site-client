{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "API_URL": true,
    "Headers": true,
    "document": true,
    "fetch": true,
    "localStorage": true,
    "location": true,
    "window": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "no-console": 0,
    "react/jsx-props-no-spreading": "off",
    "arrow-parens": "off",
    "no-restricted-globals": ["location"]
  }
}
